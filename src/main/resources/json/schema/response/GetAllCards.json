{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        }
      },
      "required": [
        "id"
      ]
    },
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "pick_n": {
            "type": "integer"
          },
          "black": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "message",
          "pick_n",
          "black"
        ]
      }
    }
  },
  "required": [
    "user",
    "cards"
  ]
}